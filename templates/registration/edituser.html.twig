{% extends 'layouts/base.html.twig' %}

{% block title 'Register' %}

{% block body %}
	<div class="container">
		<div class="row g-3">
			<div class="col-md-5 col-lg-4 order-md-first"></div>
			<div class="col-md-5 col-lg-4 order-md">
				<div class="py-5 text-center">
					<h1>
						Editer un user
					</h1>
				</div>
				<div class="mt-1s">
					{{ form_start(registrationForm) }}
					{{ form_row(registrationForm.firstName, {'attr': {'placeholder':'Saisir votre nom'}}) }}
					{{ form_row(registrationForm.lastName, {'attr': {'placeholder':'Votre pr√©nom'}}) }}
					{{ form_row(registrationForm.email, {'attr': {'placeholder':'Par ex : example@mail.com'}}) }}
